<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd" version="1.0">
    <persistence-unit name="OnslocalBOPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>models.StageCategory</class>
        <class>models.StageCategoryPK</class>
        <class>models.StageDimensionalDataPoint</class>
        <class>models.Category</class>
        <class>models.ConceptSystem</class>
        <class>models.DataResource</class>
        <class>models.DimensionalDataPoint</class>
        <class>models.DimensionalDataPointPK</class>
        <class>models.DimensionalDataSet</class>
        <class>models.GeographicArea</class>
        <class>models.GeographicAreaHierarchy</class>
        <class>models.GeographicAreaType</class>
        <class>models.GeographicLevelType</class>
        <class>models.ObservationType</class>
        <class>models.Population</class>
        <class>models.PopulationPK</class>
        <class>models.Presentation</class>
        <class>models.PresentationType</class>
        <class>models.SubjectField</class>
        <class>models.Taxonomy</class>
        <class>models.TimePeriod</class>
        <class>models.TimeType</class>
        <class>models.UnitType</class>
        <class>models.ValueDomain</class>
        <class>models.Variable</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <!--<non-jta-data-source>OnslocalBODS</non-jta-data-source>-->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/onslocal_data_bo" />
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="password" />
            <property name="eclipselink.logging.level" value="ALL" />

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="sampleCreate.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="sampleDrop.ddl"/>

            <!--<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:sampleDB;create=true"/>-->
        </properties>
    </persistence-unit>
</persistence>
